{
  "compilerOptions": {
    "types": ["vite/client"],
    "baseUrl": "./src",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["src"]
}